                            </li>
                        </ul>
                    </div>
                    <!-- End User -->

                    <!--- Sidemenu -->
                    <div id="sidebar-menu">
                        <ul>
                            <li class="text-muted menu-title">Navigation</li>

                            <li>
                                <a href="/admin" class="waves-effect"><i class="zmdi zmdi-view-dashboard"></i> <span> Dashboard </span> </a>
                            </li>
                            <li>
                                <a href="/paymentbill" class="waves-effect"><i class="fas fa-wallet"></i><span> Bill </span></a>
                            </li>
                            <li class="has_sub">
                                <a href="javascript:void(0);" class="waves-effect"><i class="zmdi zmdi-view-list"></i> <span> Product </span> <span class="menu-arrow"></span></a>
                                <ul class="list-unstyled">
                                    <li><a href="/admin-set/drinks"><i class="fa fa-cocktail"></i>Drinks</a></li>
                                    <li><a href="/admin-set/breads"><i class="fas fa-cookie"></i>Breads</a></li>
                                    <li><a href="/admin-set/fruits"><i class="fas fa-lemon"></i>Fruits</a></li>
                                    <li><a href="/admin-set/meat"><i class="fas fa-drumstick-bite"></i>Meat</a></li>
                                    <li><a href="/admin-set/chicken"><i class="fas fa-drumstick-bite"></i>Chicken</a></li>
                                    <li><a href="/admin-set/seafood"><i class="fas fa-fish"></i>SeaFood</a></li>
                                </ul>
                            </li>
