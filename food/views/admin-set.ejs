                    <div class="clearfix"></div>

                </div>

            </div>
            <!-- Left Sidebar End -->



            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card-box">
                                    <div class="table-responsive" style="width: 100%">
                                        <table class="table m-0" id="tableEmail">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Ngày đăng</th>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Giá</th>
                                                    <th>Xoá</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%for (var i = 0; i < result.length; i++) {%>
                                                    <tr>
                                                        <th scope="row"><%-i+1%></th>
                                                        <td><%-(new Date(Number(result[i]['Ngày'])).getDate()<=9)?"0"+new Date(Number(result[i]['Ngày'])).getDate():new Date(Number(result[i]['Ngày'])).getDate()%>/<%-(new Date(Number(result[i]['Ngày'])).getMonth()+1<=9)?"0"+(new Date(Number(result[i]['Ngày'])).getMonth()+1):new Date(Number(result[i]['Ngày'])).getMonth()+1%>/<%-new Date(Number(result[i]['Ngày'])).getFullYear()%></td>
                                                        <td><%-result[i].pro_name%></td>
                                                        <td><%-result[i].price%></td>
                                                        <td><button class="btn btn-danger" id="<%-result[i]._id%>"><i class="fa fa-trash"></i></button></td>
                                                    </tr>
                                                <%}%>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="card-box">
                                    <div class="form-horizontal text-right" id="form-add">
                                        <form id="formAddArea" action="" method="post" enctype="multipart/form-data">
                                            <input type="number" id="date" style="display: none" name="Ngày">
                                            <div class="form-group row">
                                                <div class="col-xs-4">
                                                    <input type="text" placeholder="Tên sản phẩm " name="pro_name" id="title" class="form-control m-b-5 col-xs-3">
                                                </div>
                                                <div class="col-xs-4">
                                                    <input type="number" pattern="!e" min="0" placeholder="Giá" name="price" id="price" class="form-control m-b-5 col-xs-3">
                                                </div>
                                                <div class="col-xs-4">
                                                    <input type="file" name="image_pro" id="image_pro" class="form-control m-b-5 col-xs-3">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="details">Mô tả chi tiết:</label>
                                                <textarea class="form-control" placeholder="Mô tả chi tiết..." name="Chi tiết" style="resize: none;" id="details"></textarea>
                                            </div>
                                            <button type="submit" id="submit" class="btn btn-primary waves-effect w-md waves-light m-b-5 m-t-5">Gửi</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container -->

                </div> <!-- content -->

                <footer class="footer text-right">
                    <%-new Date().getFullYear()%> © Đặng Thị Hạnh
                </footer>

            </div>


            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->


            <!-- Right Sidebar -->
            <div class="side-bar right-bar">
                <a href="javascript:void(0);" class="right-bar-toggle">
                    <i class="zmdi zmdi-close-circle-o"></i>
                </a>
                <h4 class="">Notifications</h4>
                <div class="notification-list nicescroll">
                    <ul class="list-group list-no-border user-list">
                        <li class="list-group-item">
                            <a href="#" class="user-list-item">
                                <div class="avatar">
                                    <img src="/assets/images/users/avatar-2.jpg" alt="">
